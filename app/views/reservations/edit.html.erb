<% if @reservation.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@reservation.errors.count, "error") %> prohibited your
      reservation from being made:
    </h3>

    <ul>
    <% @reservation.errors.full_messages.each do |message| %>
      <li>* <%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="center">
  <% if @reservation.checkin_date.present? %>
    <h2>Reservation for
      <%= @reservation.user_view_reservation_date(@reservation.checkin_date) %> Update
    </h2>
  <% else %>
    <h2>Correct your input to update your Reservation</h2>
  <% end %>
</div>

<br />

<div class="col-md-6 col-md-offset-3">
  <%= form_for @reservation do |f| %>
   <%= render 'reservations/form', f: f, reservation: @reservation %>
   <%= f.hidden_field :orginal_number_of_rooms,
      value: @reservation.number_of_rooms %>
    <% end %>
</div>

<div class="col-md-6 col-md-offset-3" >
  <br /><center><%= link_to 'Cancel', reservations_path %></center>
</div>
